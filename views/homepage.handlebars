<div class="row">
    <div class="col d-flex">
        <div class="row row-cols-1 row-cols-md-2 m-2">
            {{#each posts as |post|}}
                <div class="card m-2" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">{{post.user.username}}</h6>
                        <p class="card-text">{{post.content}}</p>

                        {{!-- edit and delete btns --}}
                        {{#if post.myPost}}
                            {{!-- edit --}}
                            {{!-- <svg id="{{post.id}}" class="editBtn" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
                            </svg> --}}
                            {{!-- delete --}}
                            <svg id="{{post.id}}" class="deleteBtn" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                            </svg>
                        {{/if}}
                    </div>

                    {{!-- comments --}}

                    {{!-- comments btn --}}

                    {{!-- <div class="position-absolute bottom-0 end-0">
                        <button class="btn d-flex align-items-center m-1" type="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat" viewBox="0 0 16 16">
                                <path d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z"/>
                            </svg>
                            <p>{{post.comments.length}}</p>
                        </button>
                    </div> --}}
                    
                    {{!-- hidden comments container --}}
                    <div class="visible">
                        {{!-- hidden comments content --}}
                        {{#each post.comments as |comment|}}
                            <p>{{comment}}</p>
                        {{/each}}
                        {{!-- hidden comments input --}}
                        <div class="input-group mb-3">
                            <input type="text" class="postCommentInput form-control" placeholder="insert comment here">
                            <button class="postCommentBtn btn btn-outline-secondary" type="button" id="{{post.id}}">+</button>
                        </div>
                    </div>
                    
                </div>
            {{/each}}
        
            {{!-- create post card --}}
            <div class="card bg-light m-2" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <div class="input-group mb-3">
                            <input id="titleInput" type="text" class="form-control" placeholder="insert title here"/>
                        </div>
                    </h5>
                    <p class="card-text">
                        <div class="input-group mb-3">
                            <textarea id="contentInput" class="form-control" placeholder="insert content here"></textarea>
                        </div>
                    </p>
                    <div class="d-flex">
                        {{#if isLoggedIn}}
                        <button class="btn btn-outline-success" type="button" id="createPostBtn">+</button>
                        {{else}}
                            <button class="btn btn-outline-success" type="button" id="createPostBtn" disabled>+</button>
                            <p class="m-2">Login to post!</p>
                        {{/if}}
                    </div>
                    
                </div>
            </div>

        </div>
    </div>
</div>


<script src="assets/js/post.js"></script>
